@model IEnumerable<SmartCourses.BLL.Models.DTOs.CourseDTOs.CourseListDto>
@{
    ViewData["Title"] = "My Courses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">My Courses</h2>
        <a class="btn btn-outline-secondary" asp-area="Instructor" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="row g-3">
        @foreach (var course in Model ?? Enumerable.Empty<SmartCourses.BLL.Models.DTOs.CourseDTOs.CourseListDto>())
        {
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="@course.ThumbnailPath" class="card-img-top" alt="@course.Title" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@course.Title</h5>
                        <p class="card-text flex-grow-1">@course.ShortDescription</p>
                        <div class="d-flex justify-content-between">
                            <a class="btn btn-sm btn-outline-info" asp-area="" asp-controller="Course" asp-action="Details" asp-route-id="@course.Id">View</a>
                            <a class="btn btn-sm btn-outline-primary" asp-area="Instructor" asp-controller="Courses" asp-action="ManageContent" asp-route-id="@course.Id">Manage</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


