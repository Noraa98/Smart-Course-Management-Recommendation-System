@model SmartCourses.BLL.Models.DTOs.Response_ResultDTOs.InstructorDashboardDto
@{
    ViewData["Title"] = "Instructor Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Instructor Dashboard</h2>
        <a class="btn btn-outline-secondary" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
    </div>

    <div class="row g-3">
        <div class="col-md-3">
            <div class="card text-bg-primary h-100">
                <div class="card-body">
                    <h5 class="card-title">My Courses</h5>
                    <p class="display-6 mb-0">@Model.TotalCourses</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-bg-success h-100">
                <div class="card-body">
                    <h5 class="card-title">Enrollments</h5>
                    <p class="display-6 mb-0">@Model.TotalEnrollments</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-bg-info h-100">
                <div class="card-body">
                    <h5 class="card-title">Revenue</h5>
                    <p class="display-6 mb-0">@Model.TotalRevenue.ToString("C")</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-bg-warning h-100">
                <div class="card-body">
                    <h5 class="card-title">Rating</h5>
                    <p class="display-6 mb-0">@Model.AverageRating.ToString("0.0")</p>
                </div>
            </div>
        </div>
    </div>
</div>


