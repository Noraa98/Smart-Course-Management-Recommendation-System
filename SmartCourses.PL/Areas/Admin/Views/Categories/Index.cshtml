@model SmartCourses.BLL.Models.DTOs.Response_ResultDTOs.PaginatedResultDto<SmartCourses.BLL.Models.DTOs.CategoryDto>
@{
    ViewData["Title"] = "Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Categories</h2>
        <a class="btn btn-primary" asp-area="Admin" asp-controller="Categories" asp-action="Create">Create Category</a>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Items ?? new List<SmartCourses.BLL.Models.DTOs.CategoryDto>())
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-info" asp-area="Admin" asp-controller="Categories" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-sm btn-outline-secondary" asp-area="Admin" asp-controller="Categories" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <form asp-area="Admin" asp-controller="Categories" asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this category?')">Delete</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>


