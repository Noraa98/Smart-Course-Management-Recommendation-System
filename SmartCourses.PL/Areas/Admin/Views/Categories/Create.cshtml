@model SmartCourses.BLL.Models.DTOs.CategoryCreateDto
@{
    ViewData["Title"] = "Create Category";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Create Category</h2>
        <a class="btn btn-outline-secondary" asp-area="Admin" asp-controller="Categories" asp-action="Index">Back to List</a>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-area="Admin" asp-controller="Categories" asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Category Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter category name" />
                    <span asp-validation-for="Name" class="text-danger small d-block mt-1"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter category description"></textarea>
                    <span asp-validation-for="Description" class="text-danger small d-block mt-1"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="IconPath" class="form-label">Icon Path (optional)</label>
                    <input asp-for="IconPath" class="form-control" placeholder="e.g., /images/icon.svg" />
                    <span asp-validation-for="IconPath" class="text-danger small d-block mt-1"></span>
                </div>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Create Category</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


