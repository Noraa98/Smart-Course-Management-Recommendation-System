@model SmartCourses.BLL.Models.DTOs.CourseDTOs.CourseDto
@{
    ViewData["Title"] = "Course Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Course Details</h2>
        <a class="btn btn-outline-secondary" asp-area="Admin" asp-controller="Courses" asp-action="Index">Back to Courses</a>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <h3>@Model.Title</h3>
                    <p class="text-muted">@Model.ShortDescription</p>
                    <hr />
                    <h5>Description</h5>
                    <p>@Model.Description</p>
                </div>
                <div class="col-md-4">
                    <div class="card bg-light">
                        <div class="card-body">
                            <h6 class="card-title">Course Information</h6>
                            <p><strong>Instructor:</strong> @Model.InstructorName</p>
                            <p><strong>Category:</strong> @Model.CategoryName</p>
                            <p><strong>Level:</strong> @Model.Level</p>
                            <p><strong>Price:</strong> 
                                @if (Model.Price.HasValue && Model.Price > 0)
                                {
                                    <span>$@Model.Price.Value.ToString("N2")</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">FREE</span>
                                }
                            </p>
                            <p><strong>Status:</strong> 
                                @if (Model.IsPublished)
                                {
                                    <span class="badge bg-success">Published</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Draft</span>
                                }
                            </p>
                            <p><strong>Enrollments:</strong> @Model.EnrollmentCount</p>
                            <p><strong>Reviews:</strong> @Model.ReviewCount</p>
                            @if (Model.ReviewCount > 0)
                            {
                                <p><strong>Rating:</strong> 
                                    <i class="bi bi-star-fill text-warning"></i>
                                    @Model.AverageRating.ToString("N1") / 5.0
                                </p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

