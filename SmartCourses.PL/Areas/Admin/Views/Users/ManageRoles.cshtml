@{
    ViewData["Title"] = "Manage Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var user = ViewBag.User as SmartCourses.DAL.Entities.Identity.ApplicationUser;
    var userRoles = (IList<string>) (ViewBag.UserRoles ?? new List<string>());
    var allRoles = (IList<string>) (ViewBag.AllRoles ?? new List<string>());
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Manage Roles - @user?.Email</h2>
        <a class="btn btn-outline-secondary" asp-area="Admin" asp-controller="Users" asp-action="Details" asp-route-id="@user?.Id">Back</a>
    </div>

    <form asp-area="Admin" asp-controller="Users" asp-action="ManageRoles" method="post" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()
        <input type="hidden" name="userId" value="@user?.Id" />
        <div class="mb-3">
            <label class="form-label">Select Roles</label>
            <div class="row">
                @foreach (var role in allRoles)
                {
                    var isChecked = userRoles.Contains(role);
                    <div class="col-md-3 mb-2">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="roles" value="@role" id="role_@role" checked="@(isChecked)">
                            <label class="form-check-label" for="role_@role">@role</label>
                        </div>
                    </div>
                }
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>


