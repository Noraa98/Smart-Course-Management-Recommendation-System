@model SmartCourses.BLL.Models.DTOs.Response_ResultDTOs.PaginatedResultDto<SmartCourses.BLL.Models.DTOs.CourseDTOs.CourseListDto>
@{
    ViewData["Title"] = "Courses Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Courses Management</h2>
        <div>
            <a class="btn btn-primary me-2" asp-area="Admin" asp-controller="Course" asp-action="Create">Create Course</a>
            <a class="btn btn-outline-secondary" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Back to Dashboard</a>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <!-- Search Form -->
    <div class="card mb-3">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-10">
                    <input type="text" name="searchTerm" class="form-control" 
                           placeholder="Search courses by title or description..." 
                           value="@ViewBag.SearchTerm" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">Search</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Courses Table -->
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Instructor</th>
                    <th>Category</th>
                    <th>Status</th>
                    <th>Enrollments</th>
                    <th>Rating</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Items != null && Model.Items.Any())
                {
                    @foreach (var course in Model.Items)
                    {
                        <tr>
                            <td>
                                <strong>@course.Title</strong>
                                <br />
                                <small class="text-muted">@(course.ShortDescription?.Length > 50 ? course.ShortDescription.Substring(0, 50) + "..." : course.ShortDescription)</small>
                            </td>
                            <td>@course.InstructorName</td>
                            <td>@course.CategoryName</td>
                            <td>
                                @if (course.IsPublished)
                                {
                                    <span class="badge bg-success">Published</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Draft</span>
                                }
                            </td>
                            <td>@course.EnrollmentCount</td>
                            <td>
                                @if (course.ReviewCount > 0)
                                {
                                    <span>
                                        <i class="bi bi-star-fill text-warning"></i>
                                        @course.AverageRating.ToString("N1") (@course.ReviewCount)
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">No reviews</span>
                                }
                            </td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-info me-1"
                                   asp-area="Admin"
                                   asp-controller="Course"
                                   asp-action="Details"
                                   asp-route-id="@course.Id">Details</a>

                                <a class="btn btn-sm btn-outline-primary me-1"
                                   asp-area="Admin"
                                   asp-controller="Course"
                                   asp-action="Edit"
                                   asp-route-id="@course.Id">Edit</a>

                                <form asp-area="Admin" asp-controller="Course" asp-action="Delete" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@course.Id" />
                                    <button class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted py-4">
                            No courses found.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Courses pagination">
            <ul class="pagination justify-content-center">
                <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                    <a class="page-link" 
                       asp-action="Index" 
                       asp-route-pageNumber="@(Model.PageNumber - 1)"
                       asp-route-searchTerm="@ViewBag.SearchTerm">Previous</a>
                </li>
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" 
                           asp-action="Index" 
                           asp-route-pageNumber="@i"
                           asp-route-searchTerm="@ViewBag.SearchTerm">@i</a>
                    </li>
                }
                <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                    <a class="page-link" 
                       asp-action="Index" 
                       asp-route-pageNumber="@(Model.PageNumber + 1)"
                       asp-route-searchTerm="@ViewBag.SearchTerm">Next</a>
                </li>
            </ul>
        </nav>
    }

    <div class="mt-3">
        <small class="text-muted">
            Showing @((Model.PageNumber - 1) * Model.PageSize + 1) to @(Math.Min(Model.PageNumber * Model.PageSize, Model.TotalCount)) of @Model.TotalCount courses
        </small>
    </div>
</div>

