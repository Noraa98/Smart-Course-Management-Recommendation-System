@model SmartCourses.BLL.Models.DTOs.CourseDTOs.CourseDto
@{
    ViewData["Title"] = "Delete Course";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Delete Course</h2>
        <a class="btn btn-outline-secondary" asp-area="Admin" asp-controller="Course" asp-action="Index">Back to Courses</a>
    </div>

    <div class="card">
        <div class="card-body">
            <h4 class="text-danger">Are you sure you want to delete this course?</h4>
            <p><strong>@Model.Title</strong></p>
            <p class="text-muted">@Model.ShortDescription</p>

            <form asp-action="Delete" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
