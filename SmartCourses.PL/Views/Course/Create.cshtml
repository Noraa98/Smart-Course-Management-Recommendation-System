
@model CourseCreateDto

@{
    ViewData["Title"] = "Create Course";
    var categories = ViewBag.Categories as List<CategoryDto> ?? new List<CategoryDto>();
    var skills = ViewBag.Skills as List<SkillDto> ?? new List<SkillDto>();
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-plus-circle"></i> Create New Course</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">
                                Course Title <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Title" class="form-control" placeholder="e.g., Complete Web Development Bootcamp" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ShortDescription" class="form-label">
                                Short Description <span class="text-danger">*</span>
                            </label>
                            <textarea asp-for="ShortDescription" class="form-control" rows="2" 
                                      placeholder="Brief description (max 300 characters)"></textarea>
                            <span asp-validation-for="ShortDescription" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">
                                Full Description <span class="text-danger">*</span>
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="6" 
                                      placeholder="Detailed course description"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="CategoryId" class="form-label">
                                    Category <span class="text-danger">*</span>
                                </label>
                                <select asp-for="CategoryId" class="form-select">
                                    <option value="">Select Category</option>
                                    @foreach (var category in categories)
                                    {
                                        <option value="@category.Id">@category.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Level" class="form-label">
                                    Level <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Level" class="form-select">
                                    <option value="">Select Level</option>
                                    <option value="1">Beginner</option>
                                    <option value="2">Intermediate</option>
                                    <option value="3">Advanced</option>
                                </select>
                                <span asp-validation-for="Level" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label">Price (USD)</label>
                                <input asp-for="Price" type="number" step="0.01" class="form-control" 
                                       placeholder="0.00 for free course" />
                                <span asp-validation-for="Price" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="DurationInHours" class="form-label">
                                    Duration (Hours) <span class="text-danger">*</span>
                                </label>
                                <input asp-for="DurationInHours" type="number" class="form-control" placeholder="10" />
                                <span asp-validation-for="DurationInHours" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Skills</label>
                            <select asp-for="SkillIds" class="form-select" multiple size="5">
                                @foreach (var skill in skills)
                                {
                                    <option value="@skill.Id">@skill.Name</option>
                                }
                            </select>
                            <div class="form-text">Hold Ctrl/Cmd to select multiple skills</div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-save"></i> Create Course
                            </button>
                            <a asp-action="MyCourses" class="btn btn-secondary px-4">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


