@model IEnumerable<SmartCourses.BLL.Models.DTOs.CourseDTOs.CourseListDto>
@{
    ViewData["Title"] = "Courses by Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var category = ViewBag.Category as SmartCourses.BLL.Models.DTOs.CategoryDto;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Category: @category?.Name</h2>
        <a class="btn btn-outline-secondary" asp-controller="Course" asp-action="Index">All Courses</a>
    </div>
    <p class="text-muted">@category?.Description</p>

    <div class="row g-3">
        @foreach (var course in Model ?? Enumerable.Empty<SmartCourses.BLL.Models.DTOs.CourseDTOs.CourseListDto>())
        {
            <div class="col-md-3">
                <div class="card h-100">
                    <img src="@course.ThumbnailPath" class="card-img-top" alt="@course.Title" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@course.Title</h5>
                        <p class="card-text flex-grow-1">@course.ShortDescription</p>
                        <a class="btn btn-sm btn-primary mt-auto" asp-controller="Course" asp-action="Details" asp-route-id="@course.Id">View</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


