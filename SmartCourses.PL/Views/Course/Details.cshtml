@using SmartCourses.BLL.Models.DTOs.Enrollment_ReviewDTOs

@model CourseDto

@{
    ViewData["Title"] = Model.Title;
    var isEnrolled = ViewBag.IsEnrolled as bool? ?? false;
    var hasReviewed = ViewBag.HasReviewed as bool? ?? false;
    var reviews = ViewBag.Reviews as List<ReviewDto> ?? new List<ReviewDto>();
}

<div class="container py-4">
    <!-- Course Header -->
    <div class="row mb-4">
        <div class="col-lg-8">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Courses</a></li>
                    <li class="breadcrumb-item"><a asp-action="ByCategory" asp-route-categoryId="@Model.CategoryId">@Model.CategoryName</a></li>
                    <li class="breadcrumb-item active">@Model.Title</li>
                </ol>
            </nav>

            <h1 class="mb-3">@Model.Title</h1>
            <p class="lead">@Model.ShortDescription</p>

            <div class="d-flex align-items-center gap-3 flex-wrap mb-3">
                <span class="badge bg-primary px-3 py-2">@Model.Level</span>
                <span class="text-muted">
                    <i class="bi bi-person-circle"></i> @Model.InstructorName
                </span>
                <span class="text-muted">
                    <i class="bi bi-clock"></i> @Model.DurationInHours hours
                </span>
                <span class="text-muted">
                    <i class="bi bi-people-fill"></i> @Model.EnrollmentCount students
                </span>
                @if (Model.ReviewCount > 0)
                {
                    <span>
                        <i class="bi bi-star-fill text-warning"></i>
                        <strong>@Model.AverageRating.ToString("N1")</strong>
                        <span class="text-muted">(@Model.ReviewCount reviews)</span>
                    </span>
                }
            </div>

            <!-- Skills -->
            @if (Model.Skills.Any())
            {
                <div class="mb-3">
                    <strong>Skills:</strong>
                    @foreach (var skill in Model.Skills)
                    {
                        <span class="badge bg-light text-dark border me-1">@skill.Name</span>
                    }
                </div>
            }
        </div>

        <div class="col-lg-4">
            <div class="card shadow-lg">
                @if (!string.IsNullOrEmpty(Model.ThumbnailPath))
                {
                    <img src="~/@Model.ThumbnailPath" class="card-img-top" alt="@Model.Title">
                }
                <div class="card-body">
                    @if (Model.Price.HasValue && Model.Price > 0)
                    {
                        <h2 class="text-primary mb-3">$@Model.Price.Value.ToString("N2")</h2>
                    }
                    else
                    {
                        <h2 class="text-success mb-3">FREE</h2>
                    }

                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        @if (isEnrolled)
                        {
                            <a asp-controller="Enrollment" asp-action="Details" asp-route-id="@Model.Id" 
                               class="btn btn-success w-100 mb-2">
                                <i class="bi bi-play-circle-fill"></i> Continue Learning
                            </a>
                        }
                        else if (User.IsInRole("Student"))
                        {
                            <form asp-controller="Enrollment" asp-action="Enroll" method="post">
                                <input type="hidden" name="courseId" value="@Model.Id" />
                                <button type="submit" class="btn btn-primary w-100 mb-2">
                                    <i class="bi bi-plus-circle"></i> Enroll Now
                                </button>
                            </form>
                        }
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Context.Request.Path" 
                           class="btn btn-primary w-100 mb-2">
                            Login to Enroll
                        </a>
                    }

                    <div class="list-group list-group-flush mt-3">
                        <div class="list-group-item d-flex justify-content-between">
                            <span><i class="bi bi-collection"></i> Sections</span>
                            <strong>@Model.Sections.Count</strong>
                        </div>
                        <div class="list-group-item d-flex justify-content-between">
                            <span><i class="bi bi-play-btn"></i> Lessons</span>
                            <strong>@Model.TotalLessons</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Course Content Tabs -->
    <ul class="nav nav-tabs mb-4" role="tablist">
        <li class="nav-item">
            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#overview">Overview</button>
        </li>
        <li class="nav-item">
            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#curriculum">Curriculum</button>
        </li>
        <li class="nav-item">
            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#reviews">
                Reviews (@Model.ReviewCount)
            </button>
        </li>
    </ul>

    <div class="tab-content">
        <!-- Overview Tab -->
        <div class="tab-pane fade show active" id="overview">
            <div class="card">
                <div class="card-body">
                    <h3>About This Course</h3>
                    <p>@Model.Description</p>
                </div>
            </div>
        </div>

        <!-- Curriculum Tab -->
        <div class="tab-pane fade" id="curriculum">
            <div class="accordion" id="curriculumAccordion">
                @foreach (var sec in Model.Sections.OrderBy(s => s.Order))
                {
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button"
                                    data-bs-toggle="collapse" data-bs-target="#section-@sec.Id">
                                <strong>@sec.Title</strong>
                                <span class="ms-auto me-3 text-muted">@sec.Lessons.Count lessons</span>
                            </button>
                        </h2>
                        <div id="section-@sec.Id" class="accordion-collapse collapse"
                             data-bs-parent="#curriculumAccordion">
                            <div class="accordion-body">
                                @if (!string.IsNullOrEmpty(sec.Description))
                                {
                                    <p class="text-muted">@sec.Description</p>
                                }
                                <ul class="list-group list-group-flush">
                                    @foreach (var lesson in sec.Lessons.OrderBy(l => l.Order))
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <i class="bi bi-play-circle me-2"></i>
                                                @lesson.Title
                                                @if (lesson.IsFree)
                                                {
                                                    <span class="badge bg-success ms-2">Free Preview</span>
                                                }
                                            </div>
                                            <span class="text-muted">@lesson.DurationInMinutes min</span>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Reviews Tab -->
        <div class="tab-pane fade" id="reviews">
            @if (isEnrolled && !hasReviewed && User.IsInRole("Student"))
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i>
                    You can leave a review for this course!
                    <a asp-controller="Review" asp-action="Create" asp-route-courseId="@Model.Id" 
                       class="btn btn-sm btn-primary ms-2">
                        Write Review
                    </a>
                </div>
            }

            @if (reviews.Any())
            {
                @foreach (var review in reviews)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-person-circle fs-3 me-2"></i>
                                    <div>
                                        <strong>@review.UserName</strong>
                                        <div class="text-muted small">@review.CreatedOn.ToString("MMM dd, yyyy")</div>
                                    </div>
                                </div>
                                <div>
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="bi bi-star@(i <= review.Rating ? "-fill" : "") text-warning"></i>
                                    }
                                </div>
                            </div>
                            @if (!string.IsNullOrEmpty(review.Comment))
                            {
                                <p class="mt-3 mb-0">@review.Comment</p>
                            }
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-chat-quote text-muted" style="font-size: 4rem;"></i>
                    <h5 class="mt-3">No Reviews Yet</h5>
                    <p class="text-muted">Be the first to review this course!</p>
                </div>
            }
        </div>
    </div>
</div>

