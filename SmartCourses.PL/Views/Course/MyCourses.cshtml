
@model List<CourseListDto>

@{
    ViewData["Title"] = "My Courses";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-collection"></i> My Courses</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Course
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var course in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(course.ThumbnailPath))
                        {
                            <img src="~/@course.ThumbnailPath" class="card-img-top"
                                 alt="@course.Title" style="height: 180px; object-fit: cover;">
                        }
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="badge bg-@(course.IsPublished ? "success" : "warning")">
                                    @(course.IsPublished ? "Published" : "Draft")
                                </span>
                                <span class="badge bg-primary">@course.Level</span>
                            </div>
                            <h5 class="card-title">@course.Title</h5>
                            <p class="card-text text-muted small">@course.ShortDescription</p>
                            <div class="small text-muted mb-3">
                                <i class="bi bi-people-fill"></i> @course.EnrollmentCount students |
                                <i class="bi bi-star-fill text-warning"></i> @course.AverageRating.ToString("N1")
                            </div>
                        </div>
                        <div class="card-footer bg-white">
                            <div class="d-flex gap-2">
                                <a asp-area="Instructor" asp-controller="Courses" asp-action="ManageContent"
                                   asp-route-id="@course.Id" class="btn btn-sm btn-primary flex-fill">
                                    <i class="bi bi-pencil"></i> Content
                                </a>
                                <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-gear"></i> Settings
                                </a>
                                <a asp-action="Details" asp-route-id="@course.Id" class="btn btn-sm btn-outline-secondary">
                                    <i class="bi bi-eye"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-folder-x text-muted" style="font-size: 5rem;"></i>
            <h3 class="mt-3">No Courses Yet</h3>
            <p class="text-muted">Start creating your first course!</p>
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle"></i> Create Your First Course
            </a>
        </div>
    }
</div>
