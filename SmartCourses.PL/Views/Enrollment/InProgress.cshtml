@model List<EnrollmentDto>

@{
    ViewData["Title"] = "In Progress Courses";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-hourglass-split"></i> In Progress</h1>
        <div class="btn-group">
            <a asp-action="MyCourses" class="btn btn-outline-primary">All Courses</a>
            <a asp-action="InProgress" class="btn btn-outline-primary active">In Progress</a>
            <a asp-action="Completed" class="btn btn-outline-primary">Completed</a>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var enrollment in Model)
            {
                <div class="col-md-6">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@enrollment.CourseTitle</h5>
                            <div class="progress mb-3" style="height: 10px;">
                                <div class="progress-bar" style="width: @enrollment.ProgressPercent%"></div>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="fw-bold">@enrollment.ProgressPercent.ToString("N0")% Complete</span>
                                <a asp-action="Details" asp-route-id="@enrollment.Id" class="btn btn-primary">
                                    Continue <i class="bi bi-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-hourglass text-muted" style="font-size: 5rem;"></i>
            <h3 class="mt-3">No Courses in Progress</h3>
            <a asp-action="MyCourses" class="btn btn-primary">View All Courses</a>
        </div>
    }
</div>



