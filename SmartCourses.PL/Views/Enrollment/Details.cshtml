@model EnrollmentDetailsDto

@{
    ViewData["Title"] = Model.CourseTitle;
    Layout = "_Layout";
}

<div class="container-fluid p-0">
    <div class="row g-0">
        <!-- Video Player Section -->
        <div class="col-lg-8 bg-dark">
            <div class="p-4">
                <div id="playerContainer" class="ratio ratio-16x9 bg-black mb-3 d-flex align-items-center justify-content-center text-white">
                    <div class="text-center" id="playerPlaceholder">
                        <i class="bi bi-play-circle" style="font-size: 5rem;"></i>
                        <p class="mt-3">Video/Content Player</p>
                        <small class="text-muted">Select a lesson from the right to start</small>
                    </div>
                </div>

                <div class="text-white">
                    <h3>@Model.CourseTitle</h3>
                    <div class="d-flex gap-3 text-muted">
                        <span><i class="bi bi-person"></i> @Model.UserName</span>
                        <span>
                            <i class="bi bi-graph-up"></i> 
                            @Model.ProgressPercent.ToString("N0")% Complete
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar with Course Content -->
        <div class="col-lg-4 bg-light" style="max-height: 100vh; overflow-y: auto;">
            <div class="p-4">
                <h5 class="mb-3">
                    <i class="bi bi-list-ul"></i> Course Content
                </h5>

                <!-- Overall Progress -->
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Your Progress</span>
                            <strong>@Model.CompletedLessons / @Model.TotalLessons</strong>
                        </div>
                        <div class="progress" style="height: 10px;">
                            <div class="progress-bar bg-success" 
                                 style="width: @Model.ProgressPercent%"></div>
                        </div>
                    </div>
                </div>

                <!-- Course Sections -->
                <form id="antiForgeryForm" method="post">
                    @Html.AntiForgeryToken()
                </form>

                <div class="accordion" id="courseSections">
                    @if (Model.Course?.Sections != null)
                    {
                        @foreach (var sec in Model.Course.Sections.OrderBy(s => s.Order))
                        {
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button" type="button"
                                            data-bs-toggle="collapse" data-bs-target="#section-@sec.Id">
                                        <strong>@sec.Title</strong>
                                    </button>
                                </h2>
                                <div id="section-@sec.Id" class="accordion-collapse collapse show">
                                    <div class="accordion-body p-0">
                                        <div class="list-group list-group-flush">
                                            @foreach (var lesson in sec.Lessons.OrderBy(l => l.Order))
                                            {
                                                var progress = Model.LessonProgresses.FirstOrDefault(lp => lp.LessonId == lesson.Id);
                                                var isCompleted = progress?.IsCompleted ?? false;
                                                
                                                <a href="javascript:void(0)"
                                                   class="list-group-item list-group-item-action"
                                                   data-lesson-id="@lesson.Id"
                                                   data-title="@lesson.Title"
                                                   data-content-type="@lesson.ContentType"
                                                   data-content-path="@lesson.ContentPath"
                                                   data-external-url="@lesson.ExternalUrl"
                                                   onclick="loadLesson(@Model.Id, this)">
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <div class="d-flex align-items-center">
                                                            @if (isCompleted)
                                                            {
                                                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                                            }
                                                            else
                                                            {
                                                                <i class="bi bi-play-circle me-2"></i>
                                                            }
                                                            <span>@lesson.Title</span>
                                                        </div>
                                                        <small class="text-muted">@lesson.DurationInMinutes min</small>
                                                    </div>
                                                </a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>

                <!-- Action Buttons -->
                <div class="mt-4 d-grid gap-2">
                    @if (!Model.IsCompleted)
                    {
                        <form asp-action="MarkComplete" method="post">
                            <input type="hidden" name="enrollmentId" value="@Model.Id" />
                            <button type="submit" class="btn btn-success w-100">
                                <i class="bi bi-check-circle"></i> Mark Course as Complete
                            </button>
                        </form>
                    }
                    <a asp-controller="Course" asp-action="Details" asp-route-id="@Model.CourseId" 
                       class="btn btn-outline-secondary">
                        <i class="bi bi-info-circle"></i> Course Info
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function getCsrfToken() {
            const form = document.getElementById('antiForgeryForm');
            return form.querySelector('input[name="__RequestVerificationToken"]').value;
        }

        function setPlayerContent(html) {
            const container = document.getElementById('playerContainer');
            container.innerHTML = html;
        }

        let currentLessonId = null;

        function buildVideoPlayer(src) {
            return `<video id="lessonVideo" controls class="w-100 h-100">
                        <source src="${src}" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>`;
        }

        function buildPdfViewer(src) {
            return `<iframe src="${src}" class="w-100 h-100" frameborder="0"></iframe>`;
        }

        function buildExternalEmbed(url) {
            return `<iframe src="${url}" class="w-100 h-100" frameborder="0" allowfullscreen></iframe>`;
        }

        // contentType expected values (from DTO): Video, Article, PDF, Quiz
        function loadLesson(enrollmentId, anchor) {
            const title = anchor.getAttribute('data-title');
            const type = (anchor.getAttribute('data-content-type') || '').toLowerCase();
            const path = anchor.getAttribute('data-content-path') || '';
            const external = anchor.getAttribute('data-external-url') || '';

            let playerHtml = '';
            if (type === 'video') {
                const src = external || path;
                if (src) {
                    playerHtml = buildVideoPlayer(src);
                }
            } else if (type === 'pdf') {
                const src = external || path;
                if (src) {
                    playerHtml = buildPdfViewer(src);
                }
            } else if (external) {
                playerHtml = buildExternalEmbed(external);
            } else {
                playerHtml = `<div class="d-flex align-items-center justify-content-center text-white" style="min-height:300px">
                                <div class="text-center">
                                    <i class="bi bi-file-earmark-text" style="font-size:3rem;"></i>
                                    <p class="mt-3 mb-0">${title}</p>
                                    <small class="text-muted">No preview available</small>
                                </div>
                              </div>`;
            }

            setPlayerContent(playerHtml);
            currentLessonId = parseInt(anchor.getAttribute('data-lesson-id'));

            // Attach auto-complete on video end
            const video = document.getElementById('lessonVideo');
            if (video) {
                video.addEventListener('ended', function() {
                    if (currentLessonId) {
                        markLessonComplete(enrollmentId, currentLessonId);
                    }
                });
            }

            // Mark lesson complete (optimistic) when user loads it
            markLessonComplete(enrollmentId, currentLessonId);
        }

        function markLessonComplete(enrollmentId, lessonId) {
            fetch('/Enrollment/MarkLessonComplete', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded; charset=UTF-8',
                    'RequestVerificationToken': getCsrfToken()
                },
                body: `enrollmentId=${encodeURIComponent(enrollmentId)}&lessonId=${encodeURIComponent(lessonId)}`
            })
            .then(r => r.json())
            .then(data => {
                if (data && data.success) {
                    // Update overall progress bar without reload
                    const progressBar = document.querySelector('.progress-bar');
                    if (progressBar) {
                        progressBar.style.width = (data.progress || 0) + '%';
                    }
                }
            })
            .catch(() => {});
        }
    </script>
}


