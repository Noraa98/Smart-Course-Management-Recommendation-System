@model EnrollmentDetailsViewModel

@{
    ViewData["Title"] = Model.Course.Title;
    var currentLesson = Model.CurrentLesson;
    var videoId = GetYouTubeVideoId(currentLesson?.ExternalUrl);
}

<div class="container-fluid">
    <div class="row">
        <!-- Video Player Section -->
        <div class="col-lg-8">
            <div class="video-container bg-dark" style="min-height: 500px;">
                @if (!string.IsNullOrEmpty(videoId))
                {
                    <!-- YouTube Embed -->
                    <iframe 
                        id="videoPlayer"
                        width="100%" 
                        height="500" 
                            src="https://www.youtube.com/embed/@videoId?enablejsapi=1&origin=@(Context.Request.Scheme)://@(Context.Request.Host)"
                            title="@currentLesson.Title"
                        frameborder="0" 
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
                        allowfullscreen>
                    </iframe>
                }
                else
                {
                    <div class="d-flex align-items-center justify-content-center h-100">
                        <div class="text-center text-white">
                            <i class="fas fa-play-circle fa-5x mb-3"></i>
                            <h4>Select a lesson from the right to start</h4>
                        </div>
                    </div>
                }
            </div>

            <!-- Course Title -->
            <div class="mt-4">
                <h2>@Model.Course.Title</h2>
                
                @if (currentLesson != null)
                {
                    <h4 class="text-muted">@currentLesson.Title</h4>
                    <p>@currentLesson.Description</p>
                }
            </div>

            <!-- Lesson Controls -->
            @if (currentLesson != null)
            {
                <div class="d-flex justify-content-between mt-4">
                    @if (Model.PreviousLessonId.HasValue)
                    {
                        <a href="@Url.Action("Details", new { id = Model.EnrollmentId, lessonId = Model.PreviousLessonId })" 
                           class="btn btn-secondary">
                            <i class="fas fa-chevron-left"></i> Previous Lesson
                        </a>
                    }
                    else
                    {
                        <div></div>
                    }

                    <button id="markCompleteBtn" 
                            class="btn btn-success"
                            data-enrollment-id="@Model.EnrollmentId"
                            data-lesson-id="@currentLesson.Id">
                        <i class="fas fa-check"></i> Mark as Complete
                    </button>

                    @if (Model.NextLessonId.HasValue)
                    {
                        <a href="@Url.Action("Details", new { id = Model.EnrollmentId, lessonId = Model.NextLessonId })" 
                           class="btn btn-primary">
                            Next Lesson <i class="fas fa-chevron-right"></i>
                        </a>
                    }
                    else
                    {
                        <div></div>
                    }
                </div>
            }
        </div>

        <!-- Course Content Sidebar -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Course Content</h5>
                </div>
                <div class="card-body p-0">
                    <!-- Progress Bar -->
                    <div class="p-3 border-bottom">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Your Progress</span>
                            <span>@Model.CompletedLessons / @Model.TotalLessons</span>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-success" 
                                 role="progressbar" 
                                 style="width: @Model.ProgressPercent%"
                                 aria-valuenow="@Model.ProgressPercent" 
                                 aria-valuemin="0" 
                                 aria-valuemax="100">
                            </div>
                        </div>
                    </div>

                    <!-- Sections and Lessons -->
                    <div class="accordion" id="courseSections">
                        @foreach (var sec in Model.Course.Sections.OrderBy(s => s.Order))
                        {
                            var sectionId = "section" + sec.Id;
                            var isExpanded = sec.Lessons.Any(l => l.Id == currentLesson?.Id);

                            <div class="accordion-item border-0">
                                <h2 class="accordion-header">
                                    <button class="accordion-button @(isExpanded ? "" : "collapsed")" 
                                            type="button" 
                                            data-bs-toggle="collapse" 
                                            data-bs-target="#@sectionId">
                                        <strong>@sec.Title</strong>
                                    </button>
                                </h2>
                                <div id="@sectionId" 
                                     class="accordion-collapse collapse @(isExpanded ? "show" : "")" 
                                     data-bs-parent="#courseSections">
                                    <div class="accordion-body p-0">
                                        <ul class="list-group list-group-flush">
                                            @foreach (var lesson in sec.Lessons.OrderBy(l => l.Order))
                                            {
                                                var isCompleted = Model.CompletedLessonIds.Contains(lesson.Id);
                                                var isCurrent = lesson.Id == currentLesson?.Id;

                                                <li class="list-group-item @(isCurrent ? "bg-light" : "")">
                                                    <a href="@Url.Action("Details", new { id = Model.EnrollmentId, lessonId = lesson.Id })"
                                                       class="text-decoration-none d-flex align-items-center">
                                                        <span class="me-2">
                                                            @if (isCompleted)
                                                            {
                                                                <i class="fas fa-check-circle text-success"></i>
                                                            }
                                                            else if (isCurrent)
                                                            {
                                                                <i class="fas fa-play-circle text-primary"></i>
                                                            }
                                                            else
                                                            {
                                                                <i class="far fa-circle text-muted"></i>
                                                            }
                                                        </span>
                                                        <span class="flex-grow-1">@lesson.Title</span>
                                                        <small class="text-muted">@lesson.DurationInMinutes min</small>
                                                    </a>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Course Info Button -->
                    <div class="p-3 border-top">
                        <button class="btn btn-outline-secondary w-100">
                            Course Info
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Mark lesson as complete
        document.getElementById('markCompleteBtn')?.addEventListener('click', async function() {
            const enrollmentId = this.dataset.enrollmentId;
            const lessonId = this.dataset.lessonId;

            try {
                const response = await fetch('/Enrollment/UpdateProgress', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({
                        enrollmentId: parseInt(enrollmentId),
                        lessonId: parseInt(lessonId),
                        isCompleted: true,
                        watchedSeconds: 0
                    })
                });

                if (response.ok) {
                    location.reload();
                }
            } catch (error) {
                console.error('Error:', error);
            }
        });
    </script>
}

@functions {
    string GetYouTubeVideoId(string url)
    {
        if (string.IsNullOrEmpty(url)) return null;

        // Extract video ID from various YouTube URL formats
        var uri = new Uri(url);
        
        // youtu.be/VIDEO_ID
        if (uri.Host == "youtu.be")
        {
            return uri.AbsolutePath.TrimStart('/');
        }
        
        // youtube.com/watch?v=VIDEO_ID
        var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
        return query["v"];
    }
}