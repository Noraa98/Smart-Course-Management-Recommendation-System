
@model List<EnrollmentDto>

@{
    ViewData["Title"] = "My Learning";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-book-half"></i> My Learning</h1>
        <div class="btn-group">
            <a asp-action="MyCourses" class="btn btn-outline-primary active">All Courses</a>
            <a asp-action="InProgress" class="btn btn-outline-primary">In Progress</a>
            <a asp-action="Completed" class="btn btn-outline-primary">Completed</a>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var enrollment in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(enrollment.CourseThumbnail))
                        {
                            <img src="~/@enrollment.CourseThumbnail" class="card-img-top" 
                                 style="height: 180px; object-fit: cover;" alt="@enrollment.CourseTitle">
                        }
                        <div class="card-body">
                            <h5 class="card-title">@enrollment.CourseTitle</h5>
                            
                            <!-- Progress Bar -->
                            <div class="mb-3">
                                <div class="d-flex justify-content-between mb-1">
                                    <small class="text-muted">Progress</small>
                                    <small class="fw-bold">@enrollment.ProgressPercent.ToString("N0")%</small>
                                </div>
                                <div class="progress" style="height: 8px;">
                                    <div class="progress-bar @(enrollment.IsCompleted ? "bg-success" : "")" 
                                         style="width: @enrollment.ProgressPercent%"></div>
                                </div>
                            </div>

                            <div class="small text-muted">
                                <i class="bi bi-calendar"></i> Enrolled @enrollment.EnrolledAt.ToString("MMM dd, yyyy")
                            </div>
                            
                            @if (enrollment.IsCompleted)
                            {
                                <div class="small text-success mt-1">
                                    <i class="bi bi-check-circle-fill"></i> Completed @enrollment.CompletedAt?.ToString("MMM dd, yyyy")
                                </div>
                            }
                        </div>
                        <div class="card-footer bg-white">
                            <a asp-action="Details" asp-route-id="@enrollment.Id" class="btn btn-primary w-100">
                                <i class="bi bi-play-circle"></i> 
                                @(enrollment.IsCompleted ? "Review Course" : "Continue Learning")
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-book text-muted" style="font-size: 5rem;"></i>
            <h3 class="mt-3">No Enrolled Courses</h3>
            <p class="text-muted">Start your learning journey today!</p>
            <a asp-controller="Course" asp-action="Index" class="btn btn-primary btn-lg">
                <i class="bi bi-search"></i> Browse Courses
            </a>
        </div>
    }
</div>



