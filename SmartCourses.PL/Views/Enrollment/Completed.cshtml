@model List<EnrollmentDto>

@{
    ViewData["Title"] = "Completed Courses";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-trophy-fill text-warning"></i> Completed Courses</h1>
        <div class="btn-group">
            <a asp-action="MyCourses" class="btn btn-outline-primary">All Courses</a>
            <a asp-action="InProgress" class="btn btn-outline-primary">In Progress</a>
            <a asp-action="Completed" class="btn btn-outline-primary active">Completed</a>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var enrollment in Model)
            {
                <div class="col-md-4">
                    <div class="card h-100 border-success">
                        <div class="card-body">
                            <div class="text-center mb-3">
                                <i class="bi bi-trophy-fill text-warning" style="font-size: 3rem;"></i>
                            </div>
                            <h5 class="card-title text-center">@enrollment.CourseTitle</h5>
                            <p class="text-center text-muted small mb-0">
                                Completed on @enrollment.CompletedAt?.ToString("MMMM dd, yyyy")
                            </p>
                        </div>
                        <div class="card-footer bg-success text-white text-center">
                            <i class="bi bi-check-circle-fill"></i> Completed
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-trophy text-muted" style="font-size: 5rem;"></i>
            <h3 class="mt-3">No Completed Courses Yet</h3>
            <p class="text-muted">Complete your first course to see it here!</p>
            <a asp-action="InProgress" class="btn btn-primary">Continue Learning</a>
        </div>
    }
</div>

