
@model PaginatedResultDto<UserDto>

@{
    ViewData["Title"] = "Manage Users";
    var currentRole = ViewBag.CurrentRole as string;
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-people"></i> Manage Users</h1>
        <div class="btn-group">
            <a asp-action="Index" class="btn btn-outline-primary @(string.IsNullOrEmpty(currentRole) ? "active" : "")">
                All Users
            </a>
            <a asp-action="Index" asp-route-role="Admin" class="btn btn-outline-primary @(currentRole == "Admin" ? "active" : "")">
                Admins
            </a>
            <a asp-action="Index" asp-route-role="Instructor" class="btn btn-outline-primary @(currentRole == "Instructor" ? "active" : "")">
                Instructors
            </a>
            <a asp-action="Index" asp-route-role="Student" class="btn btn-outline-primary @(currentRole == "Student" ? "active" : "")">
                Students
            </a>
        </div>
    </div>

    @if (Model.Items.Any())
    {
        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Roles</th>
                            <th>Joined</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Items)
                        {
                            <tr>
                                <td>
                                    <strong>@user.FirstName @user.LastName</strong>
                                </td>
                                <td>@user.Email</td>
                                <td>
                                    @foreach (var role in user.Roles)
                                    {
                                        <span class="badge bg-secondary me-1">@role</span>
                                    }
                                </td>
                                <td><small class="text-muted">@user.CreatedAt.ToString("MMM dd, yyyy")</small></td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-outline-primary">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="ManageRoles" asp-route-id="@user.Id" class="btn btn-outline-warning">
                                            <i class="bi bi-person-gear"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-role="@currentRole">
                                @i
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
</div>

