@{
    ViewData["Title"] = "Access Denied";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 text-center">
            <div class="mb-4">
                <i class="bi bi-shield-x text-danger" style="font-size: 8rem;"></i>
            </div>

            <h1 class="display-4 fw-bold text-danger mb-3">Access Denied</h1>

            <div class="alert alert-danger d-inline-block mb-4">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <strong>Error 403:</strong> Forbidden
            </div>

            <p class="lead text-muted mb-4">
                You don't have permission to access this resource.
            </p>

            <p class="text-muted mb-4">
                This page is restricted and requires specific authorization.
                If you believe you should have access, please contact the administrator.
            </p>

            <div class="d-flex gap-3 justify-content-center flex-wrap">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                    <i class="bi bi-house-fill"></i> Go to Home
                </a>

                @if (User.Identity?.IsAuthenticated != true)
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary btn-lg">
                        <i class="bi bi-box-arrow-in-right"></i> Login
                    </a>
                }
                else
                {
                    <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg">
                        <i class="bi bi-arrow-left"></i> Go Back
                    </a>
                }
            </div>

            <!-- Additional Help -->
            <div class="mt-5 p-4 bg-light rounded">
                <h5 class="mb-3">
                    <i class="bi bi-question-circle"></i> Need Help?
                </h5>
                <p class="text-muted mb-0">
                    If you think this is a mistake, please contact support at
                    <a href="mailto:support@smartcourses.com" class="text-decoration-none">
                        support@smartcourses.com
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>