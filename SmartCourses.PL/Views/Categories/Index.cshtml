@model PaginatedResultDto<CategoryDto>

@{
    ViewData["Title"] = "Manage Categories";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-folder"></i> Manage Categories</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Category
        </a>
    </div>

    @if (Model.Items.Any())
    {
        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Courses</th>
                            <th>Created</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model.Items)
                        {
                            <tr>
                                <td><strong>@category.Name</strong></td>
                                <td>@(category.Description ?? "-")</td>
                                <td><span class="badge bg-primary">@category.CourseCount</span></td>
                                <td><small class="text-muted">@category.CreatedOn.ToString("MMM dd, yyyy")</small></td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-outline-info">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@category.Id" method="post" class="d-inline"
                                              onsubmit="return confirm('Are you sure you want to delete this category?');">
                                            <button type="submit" class="btn btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

