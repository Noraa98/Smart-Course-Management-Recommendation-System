@model SmartCourses.BLL.Models.DTOs.Enrollment_ReviewDTOs.ReviewUpdateDto
@{
    ViewData["Title"] = "Edit Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Edit Review</h2>
        <a class="btn btn-outline-secondary" asp-controller="Review" asp-action="MyReviews">Back to My Reviews</a>
    </div>

    <form asp-controller="Review" asp-action="Edit" method="post" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()
        <input asp-for="Id" type="hidden" />
        <div class="mb-3">
            <label asp-for="Rating" class="form-label"></label>
            <select asp-for="Rating" class="form-select">
                <option value="">Select rating</option>
                @for (var i = 1; i <= 5; i++)
                {
                    <option value="@i">@i</option>
                }
            </select>
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Comment" class="form-label"></label>
            <textarea asp-for="Comment" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>

    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
</div>


