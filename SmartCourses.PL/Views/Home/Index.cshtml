@using SmartCourses.BLL.Models.DTOs.CourseDTOs
@model CourseDto

@{
    ViewData["Title"] = "Home";
    var featuredCourses = ViewBag.FeaturedCourses as List<CourseListDto> ?? new List<CourseListDto>();
    var recentCourses = ViewBag.RecentCourses as List<CourseListDto> ?? new List<CourseListDto>();
    var categories = ViewBag.Categories as List<CategoryDto> ?? new List<CategoryDto>();
    var placeholder = Url.Content("~/images/course-placeholder.svg");
}

<!-- Hero Section -->
<section class="bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-3">Learn Without Limits</h1>
                <p class="lead mb-4">
                    Discover thousands of courses to enhance your skills and advance your career.
                    Start learning today with Smart Courses!
                </p>
                <div class="d-flex gap-3">
                    <a asp-controller="Course" asp-action="Index" class="btn btn-light btn-lg">
                        <i class="bi bi-search"></i> Browse Courses
                    </a>
                    @if (User.Identity?.IsAuthenticated != true)
                    {
                        <a asp-controller="Account" asp-action="Register" class="btn btn-outline-light btn-lg">
                            Get Started Free
                        </a>
                    }
                </div>
            </div>
            <div class="col-lg-6 text-center mt-4 mt-lg-0">
                <i class="bi bi-mortarboard-fill" style="font-size: 15rem; opacity: 0.2;"></i>
            </div>
        </div>
    </div>
</section>

<!-- Categories Section -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-5">Explore Categories</h2>
        <div class="row g-4">
            @foreach (var category in categories.Take(6))
            {
                <div class="col-md-4 col-lg-2">
                    <a asp-controller="Course" asp-action="ByCategory" asp-route-categoryId="@category.Id"
                       class="text-decoration-none">
                        <div class="card text-center h-100 border-0 shadow-sm hover-card">
                            <div class="card-body">
                                <div class="mb-3">
                                    <i class="bi bi-folder-fill text-primary" style="font-size: 3rem;"></i>
                                </div>
                                <h6 class="card-title">@category.Name</h6>
                                <small class="text-muted">@category.CourseCount Courses</small>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>

<!-- Featured Courses -->
@if (featuredCourses.Any())
{
    <section class="py-5 bg-light">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Most Popular Courses</h2>
                <a asp-controller="Course" asp-action="Index" class="btn btn-outline-primary">
                    View All <i class="bi bi-arrow-right"></i>
                </a>
            </div>
            <div class="row g-4">
                @foreach (var course in featuredCourses.Take(3))
                {
                    var imgPath = !string.IsNullOrEmpty(course.ThumbnailPath)
                    ? (course.ThumbnailPath.StartsWith("http", System.StringComparison.OrdinalIgnoreCase)
                    ? course.ThumbnailPath
                    : Url.Content($"~/{course.ThumbnailPath.TrimStart('/')}"))
                    : placeholder;

                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 shadow-sm border-0">
                            <img src="@imgPath" class="card-img-top" alt="@course.Title" style="height: 200px; object-fit: cover;">

                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <span class="badge bg-primary">@course.Level</span>
                                    @if (course.Price.HasValue && course.Price > 0)
                                    {
                                        <span class="fw-bold text-primary">$@course.Price.Value.ToString("N2")</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Free</span>
                                    }
                                </div>

                                <h5 class="card-title">
                                    <a asp-controller="Course" asp-action="Details" asp-route-id="@course.Id"
                                       class="text-decoration-none text-dark">
                                        @course.Title
                                    </a>
                                </h5>
                                <p class="card-text text-muted small">@course.ShortDescription</p>

                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted"><i class="bi bi-person"></i> @course.InstructorName</small>
                                    <div>
                                        <i class="bi bi-star-fill text-warning"></i>
                                        <span>@course.AverageRating.ToString("N1")</span>
                                        <small class="text-muted">(@course.ReviewCount)</small>
                                    </div>
                                </div>

                                <div class="mt-2">
                                    <small class="text-muted"><i class="bi bi-people-fill"></i> @course.EnrollmentCount students</small>
                                </div>
                            </div>

                            <div class="card-footer bg-white border-0">
                                <a asp-controller="Course" asp-action="Details" asp-route-id="@course.Id"
                                   class="btn btn-primary w-100">
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

<!-- Recent Courses -->
@if (recentCourses.Any())
{
    <section class="py-5">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Recently Added</h2>
                <a asp-controller="Course" asp-action="Index" class="btn btn-outline-primary">
                    View All <i class="bi bi-arrow-right"></i>
                </a>
            </div>
            <div class="row g-4">
                @foreach (var course in recentCourses.Take(4))
                {
                    var imgPath = !string.IsNullOrEmpty(course.ThumbnailPath)
                    ? (course.ThumbnailPath.StartsWith("http", System.StringComparison.OrdinalIgnoreCase)
                    ? course.ThumbnailPath
                    : Url.Content($"~/{course.ThumbnailPath.TrimStart('/')}"))
                    : placeholder;

                    <div class="col-md-6 col-lg-3">
                        <div class="card h-100 shadow-sm border-0">
                            <img src="@imgPath" class="card-img-top" alt="@course.Title" style="height: 150px; object-fit: cover;">
                            <div class="card-body">
                                <span class="badge bg-info mb-2">New</span>
                                <h6 class="card-title">
                                    <a asp-controller="Course" asp-action="Details" asp-route-id="@course.Id"
                                       class="text-decoration-none text-dark">
                                        @course.Title
                                    </a>
                                </h6>
                                <small class="text-muted d-block"><i class="bi bi-person"></i> @course.InstructorName</small>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

<!-- CTA Section -->
<section class="py-5 bg-primary text-white">
    <div class="container text-center">
        <h2 class="mb-4">Start Your Learning Journey Today</h2>
        <p class="lead mb-4">Join thousands of students already learning on Smart Courses</p>
        @if (User.Identity?.IsAuthenticated != true)
        {
            <a asp-controller="Account" asp-action="Register" class="btn btn-light btn-lg">
                Sign Up Now - It's Free!
            </a>
        }
        else
        {
            <a asp-controller="Course" asp-action="Index" class="btn btn-light btn-lg">
                Start Learning Now
            </a>
        }
    </div>
</section>

@section Scripts {
    <style>
        .hover-card {
            transition: transform 0.2s;
        }

            .hover-card:hover {
                transform: translateY(-5px);
            }
    </style>
}
